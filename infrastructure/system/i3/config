## custom bindings ##
# fn+F12 increase brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/brightness.sh up
# fn+F11 decrease brightness
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/brightness.sh down
# fn+F3 increase volume
# bindsym XF86AudioRaiseVolume exec amixer -q set Master 3%+
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/volume.sh raise
# fn+F2 decrease volume
# bindsym XF86AudioLowerVolume exec amixer -q set Master 3%-
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/volume.sh lower
# fn+F1 mute / unmute volume
# bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/scripts/volume.sh mute
# fn+F6 toggle touchpad
bindsym XF86TouchpadToggle exec ~/.config/i3/scripts/toggleTouchpad.sh

## allow to return to the previous worspace when hitting $mod+$wsn again
# http://www.slackword.net?p=657
workspace_auto_back_and_forth yes


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"
